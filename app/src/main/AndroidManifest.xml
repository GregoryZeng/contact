<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.chenxinwen.micontacts">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".AddNewContact"
            android:label="@string/add_contact_label" />
        <activity
            android:name=".ContactsinfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".call_cluster" />
        <activity
            android:name=".EditContactsinfoActivity"
            android:label="编辑联系人"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Regist"></activity>

        <activity
            android:name=".ComfortMsgActivity"
            android:label="@string/title_activity_comfort_msg" />
        <activity
            android:name=".ComfortSMSAct"
            android:label="@string/title_activity_comfort_sms"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>



</manifest>